<h1>ユーザの詳細情報</h1>

<div>
ここにユーザ詳細情報を表示
</div>

<table border="1">
  <tr>
    <td>ユーザ名</td>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <td>ニックネーム</td>
    <td><%= @user.nickname %></td>
  </tr>
  <tr>
    <td>メール</td>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <td>暗号化パスワード</td>
    <td><%= @user.encrypt_password %></td>
  </tr>
  <tr>
    <td>管理者フラグ</td>
    <td><%= @user.admin_flag %></td>
  </tr>
  <tr>
    <td>アイコンULR</td>
    <td><%= @user.icon_url %></td>
  </tr>
  <tr>
    <td>性別</td>
    <td><%= @user.sex %></td>
  </td>
  <tr>
    <td>誕生日</td>
    <td><%= @user.birthday %></td>
  </tr>
  <tr>
    <td>更新日時</td>
    <td><%= @user.updated_at %></td>
  </tr>
  <tr>
    <td>作成日時</td>
    <td><%= @user.created_at %></td>
  </tr>
</table>

<%= link_to '一覧に戻る', users_path %>

