<h1>検索結果画面（ユーザ）</h1>

<div>
  <b><%= @keyword %></b> で検索した結果
</div>
<br>

<%= paginate @users, :window => 4, :outer_window => 2 %>

<% if @users.empty? %>
ヒットしたユーザはいません
<% else %>

<% @users.each do |user| %>
<table border="1">
  <tr>
    <td>ユーザ名</td>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <td>ニックネーム</td>
    <td><%= user.nickname %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= user.email %></td>
  </tr>
  <tr>
    <td colspan ='2'>
      <%= link_to '詳細画面へすすむ', user_path(user.id) %>
    </td>
  </td>
</table>
<% end %>

<% end %>
